---

<BaseLayout title={title} description={description}>
  <!-- Elementor Section: Hero - Full Height, Hidden on Mobile -->
  <section class="elementor-section elementor-top-section elementor-section-content-middle elementor-section-full_width elementor-section-height-full elementor-hidden-mobile elementor-section-height-default elementor-section-items-middle" data-id="7886f0c" data-element_type="section">
    <div class="elementor-container elementor-column-gap-default">
      <div class="elementor-column elementor-col-100 elementor-top-column">
        <div class="elementor-widget-wrap elementor-element-populated">
          <div class="elementor-element elementor-widget-tablet__width-inherit elementor-widget elementor-widget-heading">
            <div class="elementor-widget-container">
              <h2 class="elementor-heading-title elementor-size-default">Business</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Elementor Section: Product Line Up -->
  <section class="elementor-section elementor-top-section elementor-section-boxed elementor-section-height-default elementor-section-height-default" data-id="056c55f" data-element_type="section">
    <div class="elementor-container elementor-column-gap-default">
      <div class="elementor-column elementor-col-100 elementor-top-column">
        <div class="elementor-widget-wrap elementor-element-populated">
          <!-- Product Line Up Title -->
          <section class="elementor-section elementor-inner-section elementor-section-boxed elementor-section-height-default elementor-section-height-default">
            <div class="elementor-container elementor-column-gap-default">
              <div class="elementor-column elementor-col-100 elementor-inner-column">
                <div class="elementor-widget-wrap elementor-element-populated">
                  <div class="elementor-element elementor-widget-tablet__width-inherit elementor-widget elementor-widget-heading">
                    <div class="elementor-widget-container">
                      <h2 class="elementor-heading-title elementor-size-default">Product Line Up</h2>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <!-- Product Line Up Items -->
          <section class="elementor-section elementor-inner-section elementor-section-boxed elementor-section-height-default elementor-section-height-default">
            <div class="elementor-container elementor-column-gap-default">
              {productLineUp.map((item) => (
                <div class="elementor-column elementor-col-11 elementor-inner-column">
                  <div class="elementor-widget-wrap elementor-element-populated">
                    <div class="elementor-element elementor-widget elementor-widget-image">
                      <div class="elementor-widget-container">
                        <a href={item.href}>
                          <img
                            decoding="async"
                            src={item.image}
                            alt={item.name}
                            loading="lazy"
                          />
                        </a>
                      </div>
                    </div>
                    <div class="elementor-element elementor-widget elementor-widget-text-editor">
                      <div class="elementor-widget-container">
                        <p>{item.name}</p>
                      </div>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </section>
        </div>
      </div>
    </div>
  </section>

  <!-- Products Section with Exact Elementor Structure -->
  {products.map((product) => (
    <>
      <!-- Elementor Section: Category Title -->
      <section class="elementor-section elementor-top-section elementor-section-boxed elementor-section-height-default elementor-section-height-default" data-id="3f5958b" data-element_type="section">
        <div class="elementor-container elementor-column-gap-default">
          <div class="elementor-column elementor-col-100 elementor-top-column">
            <div class="elementor-widget-wrap elementor-element-populated">
              <div class="elementor-element elementor-widget elementor-widget-menu-anchor">
                <div class="elementor-widget-container">
                  <div class="elementor-menu-anchor" id={product.anchor}></div>
                </div>
              </div>
              <div class="elementor-element elementor-widget-tablet__width-inherit elementor-widget elementor-widget-heading">
                <div class="elementor-widget-container">
                  <h2 class="elementor-heading-title elementor-size-default">{product.title}</h2>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Product Variants -->
      {product.variants.map((variant) => (
        <section class="elementor-section elementor-top-section elementor-section-boxed elementor-section-height-default elementor-section-height-default" data-id="3cf97e5" data-element_type="section">
          <div class="elementor-container elementor-column-gap-default">
            <div class="elementor-column elementor-col-100 elementor-top-column">
              <div class="elementor-widget-wrap elementor-element-populated">
                <div class="elementor-element elementor-widget elementor-widget-heading">
                  <div class="elementor-widget-container">
                    <h4 class="elementor-heading-title elementor-size-default">{variant.name}</h4>
                  </div>
                </div>
                <div class="elementor-element elementor-widget elementor-widget-text-editor">
                  <div class="elementor-widget-container">
                    <p>{variant.description}</p>
                  </div>
                </div>
                <div class="elementor-element elementor-pagination-position-outside elementor-widget elementor-widget-image-carousel" data-element_type="widget">
                  <div class="elementor-widget-container">
                    <div class="elementor-image-carousel-wrapper swiper" role="region" aria-roledescription="carousel" aria-label="Image Carousel" dir="ltr">
                      <div class="elementor-image-carousel swiper-wrapper" aria-live="off" data-product-id={`${product.id}-${variant.name}`}>
                        {variant.images.map((image, index) => (
                          <div class="swiper-slide" role="group" aria-roledescription="slide" aria-label={`${index + 1} of ${variant.images.length}`}>
                            <a
                              href={`https://wa.me/${whatsappNumber}?text=Saya%20dapat%20informasi%20${encodeURIComponent(product.title)}%20${encodeURIComponent(variant.name)}%20dari%20website.%20Mohon%20informasi%20lebih%20lengkap,%20ya.%20Terima%20kasih.`}
                              target="_blank"
                              rel="noopener noreferrer"
                            >
                              <figure class="swiper-slide-inner">
                                <img
                                  decoding="async"
                                  class="swiper-slide-image"
                                  src={image}
                                  alt={`${product.title} ${variant.name} - ${index + 1}`}
                                  loading="lazy"
                                />
                              </figure>
                            </a>
                          </div>
                        ))}
                      </div>
                      {variant.images.length > 1 && (
                        <div class="swiper-pagination" data-product-id={`${product.id}-${variant.name}`}></div>
                      )}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      ))}
    </>
  ))}

  <!-- Elementor Section: Bulk Order CTA -->
  <section class="elementor-section elementor-top-section elementor-section-content-middle elementor-section-boxed elementor-section-height-default elementor-section-height-default" data-id="946306e" data-element_type="section">
    <div class="elementor-container elementor-column-gap-default">
      <div class="elementor-column elementor-col-100 elementor-top-column">
        <div class="elementor-widget-wrap elementor-element-populated">
          <section class="elementor-section elementor-inner-section elementor-section-boxed elementor-section-height-default elementor-section-height-default">
            <div class="elementor-container elementor-column-gap-default">
              <div class="elementor-column elementor-col-33 elementor-inner-column">
                <div class="elementor-widget-wrap"></div>
              </div>
              <div class="elementor-column elementor-col-33 elementor-inner-column">
                <div class="elementor-widget-wrap elementor-element-populated">
                  <div class="elementor-element elementor-widget elementor-widget-heading">
                    <div class="elementor-widget-container">
                      <h4 class="elementor-heading-title elementor-size-default">Pembelian Jumlah Besar</h4>
                    </div>
                  </div>
                  <div class="elementor-element elementor-widget elementor-widget-text-editor">
                    <div class="elementor-widget-container">
                      <p>Nikmati penawaran spesial untuk pembelian dalam jumlah besar hanya di tempat kami. Dapatkan harga grosir, pelayanan prioritas, dan kemudahan proses transaksi untuk kebutuhan usaha maupun komunitas Anda.</p>
                    </div>
                  </div>
                  <div class="elementor-element elementor-align-center elementor-widget elementor-widget-bdt-advanced-button">
                    <div class="elementor-widget-container">
                      <div class="bdt-ep-button-wrapper">
                        <a
                          href={bulkOrderUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="bdt-ep-button bdt-ep-button-effect-a bdt-ep-button-size-md"
                          aria-label="Pesan Sekarang via WhatsApp"
                        >
                          <div class="bdt-ep-button-content-wrapper bdt-flex bdt-flex-middle bdt-flex-center" data-text="Pesan Sekarang">
                            <div class="bdt-ep-button-text">
                              <span class="avdbtn-text">Pesan Sekarang</span>
                            </div>
                          </div>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="elementor-column elementor-col-33 elementor-inner-column">
                <div class="elementor-widget-wrap"></div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </section>

  <!-- Elementor Section: Benefits -->
  <section class="elementor-section elementor-top-section elementor-section-content-middle elementor-section-boxed elementor-section-height-default elementor-section-height-default" data-id="f900ba2" data-element_type="section">
    <div class="elementor-container elementor-column-gap-default">
      <div class="elementor-column elementor-col-100 elementor-top-column">
        <div class="elementor-widget-wrap elementor-element-populated">
          <section class="elementor-section elementor-inner-section elementor-section-boxed elementor-section-height-default elementor-section-height-default">
            <div class="elementor-container elementor-column-gap-default">
              {benefits.map((benefit) => (
                <div class="elementor-column elementor-col-25 elementor-inner-column">
                  <div class="elementor-widget-wrap elementor-element-populated">
                    <div class="elementor-element elementor-widget elementor-widget-image">
                      <div class="elementor-widget-container">
                        <img
                          decoding="async"
                          src={benefit.icon}
                          alt={benefit.title}
                          loading="lazy"
                        />
                      </div>
                    </div>
                    <div class="elementor-element elementor-widget elementor-widget-heading">
                      <div class="elementor-widget-container">
                        <h4 class="elementor-heading-title elementor-size-default">{benefit.title}</h4>
                      </div>
                    </div>
                    <div class="elementor-element elementor-widget elementor-widget-text-editor">
                      <div class="elementor-widget-container">
                        <p>{benefit.description}</p>
                      </div>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </section>
        </div>
      </div>
    </div>
  </section>

  <!-- Elementor Section: Portfolio Banner -->
  <section class="elementor-section elementor-top-section elementor-section-content-middle elementor-section-full_width elementor-section-height-default elementor-section-height-default" data-id="2c9b3cd" data-element_type="section">
    <div class="elementor-container elementor-column-gap-default">
      <div class="elementor-column elementor-col-100 elementor-top-column">
        <div class="elementor-widget-wrap elementor-element-populated">
          <div class="elementor-element elementor-widget elementor-widget-image">
            <div class="elementor-widget-container">
              <a
                href="https://portfolio.kustomgarment.com/"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Lihat Portfolio Kustom Garment"
              >
                <img
                  fetchpriority="high"
                  decoding="async"
                  width="2000"
                  height="1000"
                  src="/images/portfolio/20250414-section7-1.png"
                  alt="Portfolio Kustom Garment"
                />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Elementor Section Base Styles */
  .elementor-section {
    position: relative;
  }

  .elementor-section.elementor-section-boxed {
    max-width: 1140px;
    margin: 0 auto;
  }

  .elementor-container {
    display: flex;
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;
  }

  .elementor-column-gap-default > .elementor-column {
    padding: 10px;
  }

  .elementor-column {
    position: relative;
    min-height: 1px;
    display: flex;
  }

  .elementor-col-100 {
    width: 100%;
  }

  .elementor-col-33 {
    width: 33%;
  }

  .elementor-col-25 {
    width: 25%;
  }

  .elementor-col-11 {
    width: 11%;
  }

  .elementor-widget-wrap {
    position: relative;
    width: 100%;
    flex-wrap: wrap;
    align-content: flex-start;
  }

  .elementor-widget-wrap:not(.elementor-element-populated):not(:empty) {
    content: '';
  }

  .elementor-element-populated .elementor-widget-wrap {
    padding: 10px 0;
  }

  .elementor-widget {
    position: relative;
  }

  .elementor-widget-container {
    position: relative;
    width: 100%;
  }

  .elementor-hidden-mobile {
    display: none;
  }

  @media (min-width: 768px) {
    .elementor-hidden-mobile {
      display: block;
    }
  }

  /* Hero Section */
  .elementor-section-height-full {
    min-height: 100vh;
  }

  .elementor-section-content-middle {
    display: flex;
    align-items: center;
  }

  .elementor-section-items-middle {
    align-items: center;
  }

  .elementor-section-full_width .elementor-container {
    max-width: 100%;
  }

  .elementor-heading-title {
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    margin: 0;
    line-height: 1.2;
  }

  .elementor-size-default {
    font-size: 96px;
  }

  /* Product Line Up */
  .elementor-image img {
    max-width: 100%;
    height: auto;
