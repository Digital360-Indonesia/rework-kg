<style>
  /* Match Elementor container styling */
  .elementor {
    width: 100%;
  }

  .elementor-element {
    position: relative;
  }

  .elementor-container-heading,
  .elementor-container-row {
    --e-con-width: 1140px;
    width: 100%;
    max-width: var(--e-con-width);
    margin: 0 auto;
    padding: 20px;
  }

  .e-con-inner {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
  }

  .elementor-widget-heading,
  .elementor-widget-text-editor,
  .elementor-widget-image {
    flex: 1;
    min-width: 0;
  }

  .elementor-container-heading .e-con-inner {
    display: block;
    text-align: center;
  }

  .elementor-container-heading .elementor-widget-heading,
  .elementor-container-heading .elementor-widget-text-editor {
    flex: none;
  }

  .elementor-heading-title {
    font-size: 32px;
    font-weight: 600;
    margin: 0 0 10px 0;
  }

  .elementor-widget-text-editor p {
    font-size: 16px;
    color: #666;
    line-height: 1.6;
  }

  .elementor-widget-container img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .elementor-container-heading,
    .elementor-container-row {
      --e-con-width: 100%;
      padding: 15px;
    }

    .e-con-inner {
      gap: 15px;
    }
  }

  @media (max-width: 768px) {
    .elementor-heading-title {
      font-size: 24px;
    }

    .elementor-widget-text-editor p {
      font-size: 14px;
    }

    .e-con-inner {
      gap: 10px;
    }

    .elementor-container-heading,
    .elementor-container-row {
      padding: 10px;
    }
  }
</style>
