---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const featuredPosts = sortedPosts.filter(post => post.data.featured);
const regularPosts = sortedPosts.filter(post => !post.data.featured);
---

<BaseLayout title="Blog - Konveksi Satuan Surabaya Kustom Garment" description="Artikel dan tips seputar konveksi, bahan kain, dan panduan ukuran dari Kustom Garment">
  <main class="blog-page">
    <!-- Hero Section -->
    <section class="blog-hero py-16 md:py-24 bg-gradient-to-br from-primary-dark to-primary">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">Blog</h1>
        <p class="text-gray-300 text-lg md:text-xl max-w-2xl">
          Artikel, tips, dan panduan lengkap seputar konveksi, bahan kain, dan pakaian custom dari Kustom Garment
        </p>
      </div>
    </section>

    <!-- Featured Posts -->
    {featuredPosts.length > 0 && (
      <section class="py-12 md:py-16">
        <div class="container mx-auto px-4">
          <h2 class="text-2xl md:text-3xl font-bold mb-8">Artikel Pilihan</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {featuredPosts.map((post) => (
              <article class="blog-card featured bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
                <a href={`/blog/${post.slug}/`} class="block">
                  {post.data.image && (
                    <div class="image-wrapper aspect-video overflow-hidden">
                      <img
                        src={post.data.image}
                        alt={post.data.title}
                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                        loading="lazy"
                      />
                    </div>
                  )}
                  <div class="p-6">
                    <div class="flex items-center gap-4 text-sm text-gray-500 mb-3">
                      <time datetime={post.data.pubDate.toISOString()}>
                        {post.data.pubDate.toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' })}
                      </time>
                      <span class="category-badge bg-accent/10 text-accent px-3 py-1 rounded-full text-xs font-medium">
                        {post.data.category}
                      </span>
                    </div>
                    <h3 class="text-xl font-bold mb-2 line-clamp-2 hover:text-accent transition-colors">
                      {post.data.title}
                    </h3>
                    <p class="text-gray-600 line-clamp-3 mb-4">
                      {post.data.description}
                    </p>
                    <span class="inline-flex items-center text-accent font-medium hover:underline">
                      Baca Selengkapnya
                      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </span>
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- All Posts -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <h2 class="text-2xl md:text-3xl font-bold mb-8">Semua Artikel</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {regularPosts.map((post) => (
            <article class="blog-card bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
              <a href={`/blog/${post.slug}/`} class="block">
                {post.data.image && (
                  <div class="image-wrapper aspect-video overflow-hidden">
                    <img
                      src={post.data.image}
                      alt={post.data.title}
                      class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="p-6">
                  <div class="flex items-center gap-4 text-sm text-gray-500 mb-3">
                    <time datetime={post.data.pubDate.toISOString()}>
                      {post.data.pubDate.toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' })}
                    </time>
                    <span class="category-badge bg-gray-100 px-3 py-1 rounded-full text-xs font-medium">
                      {post.data.category}
                    </span>
                  </div>
                  <h3 class="text-xl font-bold mb-2 line-clamp-2 hover:text-accent transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="text-gray-600 line-clamp-3 mb-4">
                    {post.data.description}
                  </p>
                  <span class="inline-flex items-center text-accent font-medium hover:underline">
                    Baca Selengkapnya
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </span>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Categories Section -->
    <section class="py-12 md:py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-2xl md:text-3xl font-bold mb-8">Kategori</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <a href="/blog/?category=Info+Kain" class="category-card bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow text-center">
            <div class="text-3xl mb-2">üßµ</div>
            <h3 class="font-semibold">Info Kain</h3>
          </a>
          <a href="/blog/?category=Tips" class="category-card bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow text-center">
            <div class="text-3xl mb-2">üí°</div>
            <h3 class="font-semibold">Tips</h3>
          </a>
          <a href="/blog/?category=Lokasi" class="category-card bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow text-center">
            <div class="text-3xl mb-2">üìç</div>
            <h3 class="font-semibold">Lokasi</h3>
          </a>
          <a href="/blog/?category=Service" class="category-card bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow text-center">
            <div class="text-3xl mb-2">üõ†Ô∏è</div>
            <h3 class="font-semibold">Layanan</h3>
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-card.featured {
    border: 2px solid transparent;
    transition: border-color 0.3s ease;
  }

  .blog-card.featured:hover {
    border-color: #f97316;
  }
</style>
