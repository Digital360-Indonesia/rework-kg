---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Get related posts (same category, exclude current)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug && p.data.category === post.data.category)
  .slice(0, 3);

// Get all categories
const categories = [...new Set(allPosts.map(p => p.data.category))];
---

<BaseLayout title={post.data.title} description={post.data.description} image={post.data.image || '/images/hero/no-min-order-banner.png'}>
  <main class="blog-post-page">
    <!-- Article Header -->
    <article class="article-header py-12 md:py-16 bg-gradient-to-br from-primary-dark to-primary">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="flex items-center gap-4 text-sm text-gray-300 mb-4">
            <span class="category-badge bg-accent/20 text-accent px-3 py-1 rounded-full font-medium">
              {post.data.category}
            </span>
            <time datetime={post.data.pubDate.toISOString()}>
              {post.data.pubDate.toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' })}
            </time>
            <span>â€¢</span>
            <span>{post.data.author}</span>
          </div>
          <h1 class="text-3xl md:text-5xl font-bold text-white mb-6">
            {post.data.title}
          </h1>
          {post.data.description && (
            <p class="text-xl text-gray-300 leading-relaxed">
              {post.data.description}
            </p>
          )}
        </div>
      </div>
    </article>

    <!-- Featured Image -->
    {post.data.image && (
      <div class="featured-image-wrapper">
        <img
          src={post.data.image}
          alt={post.data.title}
          class="w-full h-auto"
          loading="eager"
          width="1200"
          height="630"
        />
      </div>
    )}

    <!-- Article Content -->
    <article class="article-content py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <!-- Tags -->
          {post.data.tags && post.data.tags.length > 0 && (
            <div class="tags-wrapper flex flex-wrap gap-2 mb-8">
              {post.data.tags.map(tag => (
                <span class="tag bg-gray-100 px-3 py-1 rounded-full text-sm">
                  #{tag}
                </span>
              ))}
            </div>
          )}

          <!-- Content -->
          <div class="prose prose-lg max-w-none">
            <Content />
          </div>
        </div>
      </div>
    </article>

    <!-- Author Box -->
    <section class="author-box py-8 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto flex items-center gap-6">
          <div class="author-avatar w-16 h-16 bg-accent rounded-full flex items-center justify-center text-white text-2xl font-bold">
            {post.data.author.charAt(0)}
          </div>
          <div>
            <h3 class="font-bold text-lg">{post.data.author}</h3>
            <p class="text-gray-600">Tim Kustom Garment</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="related-posts py-12 md:py-16">
        <div class="container mx-auto px-4">
          <h2 class="text-2xl md:text-3xl font-bold mb-8">Artikel Terkait</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-6xl mx-auto">
            {relatedPosts.map((relatedPost) => (
              <article class="related-post-card bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
                <a href={`/blog/${relatedPost.slug}/`} class="block">
                  {relatedPost.data.image && (
                    <div class="image-wrapper aspect-video overflow-hidden">
                      <img
                        src={relatedPost.data.image}
                        alt={relatedPost.data.title}
                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                        loading="lazy"
                      />
                    </div>
                  )}
                  <div class="p-6">
                    <div class="text-sm text-gray-500 mb-2">
                      <time datetime={relatedPost.data.pubDate.toISOString()}>
                        {relatedPost.data.pubDate.toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' })}
                      </time>
                    </div>
                    <h3 class="text-lg font-bold mb-2 line-clamp-2 hover:text-accent transition-colors">
                      {relatedPost.data.title}
                    </h3>
                    <p class="text-gray-600 text-sm line-clamp-2">
                      {relatedPost.data.description}
                    </p>
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- CTA Section -->
    <section class="cta-section py-12 md:py-16 bg-accent/10">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">Butuh Pakaian Custom?</h2>
        <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
          Hubungi kami untuk konsultasi gratis dan dapatkan penawaran terbaik untuk kebutuhan pakaian custom Anda
        </p>
        <a
          href="https://wa.me/6285161202499"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center gap-2 bg-accent hover:bg-accent-dark text-white px-8 py-3 rounded-lg font-semibold transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          Hubungi Kami
        </a>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .prose {
    --tw-prose-body: rgb(55, 65, 81);
    --tw-prose-headings: rgb(17, 24, 39);
    --tw-prose-lead: rgb(75, 85, 99);
    --tw-prose-links: rgb(0, 102, 204);
    --tw-prose-bold: rgb(17, 24, 39);
    --tw-prose-counters: rgb(107, 114, 128);
    --tw-prose-bullets: rgb(209, 213, 219);
    --tw-prose-hr: rgb(229, 231, 235);
    --tw-prose-quotes: rgb(17, 24, 39);
    --tw-prose-quote-borders: rgb(229, 231, 235);
    --tw-prose-code: rgb(17, 24, 39);
    --tw-prose-pre-code: rgb(229, 231, 235);
    --tw-prose-pre-bg: rgb(31, 41, 55);
    --tw-prose-th-borders: rgb(229, 231, 235);
    --tw-prose-td-borders: rgb(229, 231, 235);
  }

  .prose :where(h2, h3, h4):not(:where([data-prose='false'] *)) {
    scroll-margin-top: 5rem;
  }

  .prose strong {
    color: rgb(17, 24, 39);
    font-weight: 700;
  }

  .prose h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: rgb(17, 24, 39);
  }

  .prose h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: rgb(17, 24, 39);
  }

  .prose h4 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-top: 1.25rem;
    margin-bottom: 0.5rem;
    color: rgb(17, 24, 39);
  }

  .prose ul {
    list-style-type: disc;
    padding-left: 1.5rem;
  }

  .prose ol {
    list-style-type: decimal;
    padding-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose a {
    color: rgb(0, 102, 204);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose a:hover {
    color: rgb(0, 82, 163);
  }

  .prose blockquote {
    border-left: 4px solid rgb(0, 102, 204);
    padding-left: 1rem;
    font-style: italic;
    color: rgb(75, 85, 99);
  }

  .prose code {
    background-color: rgb(243, 244, 246);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .prose pre {
    background-color: rgb(31, 41, 55);
    color: rgb(243, 244, 246);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }

  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  .prose th,
  .prose td {
    border: 1px solid rgb(229, 231, 235);
    padding: 0.5rem;
  }

  .prose th {
    background-color: rgb(243, 244, 246);
    font-weight: 600;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
