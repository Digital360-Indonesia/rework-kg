---
/**
 * Video Portfolio Section Component
 * 4 TikTok videos in grid layout
 * Based on static clone: assets-source/kg-static-clone/kustomgarment.com/index.html (lines 513-588)
 */

// Videos data - ordered as in static clone
const videos = [
  {
    id: 4,
    src: '/videos/tiktok-4.mp4',
    poster: '',
    title: 'TikTok Video 4'
  },
  {
    id: 3,
    src: '/videos/tiktok-3.mp4',
    poster: '',
    title: 'TikTok Video 3'
  },
  {
    id: 2,
    src: '/videos/tiktok-2.mp4',
    poster: '',
    title: 'TikTok Video 2'
  },
  {
    id: 1,
    src: '/videos/tiktok-1.mp4',
    poster: '',
    title: 'TikTok Video 1'
  }
];
---

<section class="video-portfolio-section" aria-label="Favorit Kustomers">
  <div class="video-portfolio-container">
    <!-- Section Header -->
    <div class="video-header">
      <h2 class="video-heading">Favorit Kustomers</h2>
      <p class="video-subheading">Berbagai model siap menginspirasi pilihan kustom</p>
    </div>

    <!-- Video Grid -->
    <div class="video-grid">
      {videos.map((video) => (
        <div class="video-card">
          <video
            src={video.src}
            poster={video.poster}
            preload="metadata"
            muted
            loop
            playsinline
            class="video-player"
            aria-label={video.title}
          >
            Your browser does not support the video tag.
          </video>
          <!-- Play/Pause Overlay -->
          <button class="video-control" aria-label="Play/Pause video">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="play-icon">
              <path d="M8 5v14l11-7z"/>
            </svg>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="pause-icon" style="display: none;">
              <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
            </svg>
          </button>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .video-portfolio-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 4rem 0;
  }

  .video-portfolio-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Section Header */
  .video-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .video-heading {
    font-size: 2rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 0.75rem 0;
    line-height: 1.3;
  }

  .video-subheading {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    line-height: 1.5;
  }

  /* Video Grid */
  .video-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .video-card {
    position: relative;
    width: 100%;
    padding-top: 177.78%; /* 9:16 aspect ratio for TikTok style */
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  .video-player {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Play/Pause Control */
  .video-control {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
  }

  .video-control:hover {
    background: #ffffff;
    transform: scale(1.1);
  }

  .play-icon,
  .pause-icon {
    width: 24px;
    height: 24px;
    color: #764ba2;
  }

  /* Tablet: 4 columns */
  @media (min-width: 768px) {
    .video-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 2rem;
    }

    .video-heading {
      font-size: 2.5rem;
    }

    .video-subheading {
      font-size: 1.25rem;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .video-portfolio-section {
      padding: 5rem 0;
    }

    .video-header {
      margin-bottom: 4rem;
    }

    .video-card {
      border-radius: 16px;
      box-shadow: 0 12px 32px rgba(0, 0, 0, 0.25);
    }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .video-portfolio-section {
      padding: 3rem 0;
    }

    .video-grid {
      gap: 1rem;
    }

    .video-heading {
      font-size: 1.75rem;
    }

    .video-subheading {
      font-size: 1rem;
    }

    .video-control {
      width: 40px;
      height: 40px;
    }

    .play-icon,
    .pause-icon {
      width: 20px;
      height: 20px;
    }
  }
</style>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animate video cards on scroll
  const videoCards = document.querySelectorAll('.video-card');

  gsap.from(videoCards, {
    scrollTrigger: {
      trigger: '.video-grid',
      start: 'top 80%',
      toggleActions: 'play none none none'
    },
    opacity: 0,
    y: 50,
    scale: 0.95,
    duration: 0.6,
    stagger: 0.1,
    ease: 'power2.out'
  });

  // Video play/pause controls
  const videoCardsWithControls = document.querySelectorAll('.video-card');

  videoCardsWithControls.forEach((card) => {
    const video = card.querySelector('video');
    const control = card.querySelector('.video-control');
    const playIcon = card.querySelector('.play-icon');
    const pauseIcon = card.querySelector('.pause-icon');

    let isPlaying = false;

    // Toggle play/pause
    control?.addEventListener('click', (e) => {
      e.preventDefault();
      if (isPlaying) {
        video.pause();
        playIcon.style.display = 'block';
        pauseIcon.style.display = 'none';
      } else {
        video.play();
        playIcon.style.display = 'none';
        pauseIcon.style.display = 'block';
      }
      isPlaying = !isPlaying;
    });

    // Pause when card loses hover
    card.addEventListener('mouseleave', () => {
      if (isPlaying) {
        video.pause();
        playIcon.style.display = 'block';
        pauseIcon.style.display = 'none';
        isPlaying = false;
      }
    });

    // Optional: Auto-play on hover (commented out - user controls only)
    // card.addEventListener('mouseenter', () => {
    //   video.play();
    //   playIcon.style.display = 'none';
    //   pauseIcon.style.display = 'block';
    //   isPlaying = true;
    // });
  });
</script>
