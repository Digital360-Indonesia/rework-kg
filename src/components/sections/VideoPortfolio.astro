---
/**
 * Video Portfolio Section Component
 * 4 TikTok videos in grid layout with autoplay
 * Based on static clone: assets-source/kg-static-clone/kustomgarment.com/index.html (lines 513-588)
 * Section ID: f3707b9
 */

// Videos data - ordered as in static clone (tiktok_4, tiktok_3, tiktok_2, tiktok_1)
const videos = [
  {
    id: 4,
    src: '/videos/tiktok-4.mp4',
    poster: '',
    title: 'TikTok Video 4'
  },
  {
    id: 3,
    src: '/videos/tiktok-3.mp4',
    poster: '',
    title: 'TikTok Video 3'
  },
  {
    id: 2,
    src: '/videos/tiktok-2.mp4',
    poster: '',
    title: 'TikTok Video 2'
  },
  {
    id: 1,
    src: '/videos/tiktok-1.mp4',
    poster: '',
    title: 'TikTok Video 1'
  }
];
---

<section class="video-portfolio-section" aria-label="Favorit Kustomers">
  <div class="video-portfolio-container">
    <!-- Section Header -->
    <div class="video-header">
      <h2 class="video-heading">Favorit Kustomers</h2>
      <p class="video-subheading">Berbagai model siap menginspirasi pilihan kustom</p>
    </div>

    <!-- Video Grid -->
    <div class="video-grid">
      {videos.map((video) => (
        <div class="video-card">
          <video
            src={video.src}
            poster={video.poster}
            preload="metadata"
            autoplay
            muted
            loop
            playsinline
            loading="lazy"
            class="video-player"
            aria-label={video.title}
          >
            Your browser does not support the video tag.
          </video>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .video-portfolio-section {
    background: #ffffff;
    padding: 4rem 0;
  }

  .video-portfolio-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Section Header */
  .video-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .video-heading {
    font-size: 2rem;
    font-weight: 700;
    color: #333333;
    margin: 0 0 0.75rem 0;
    line-height: 1.3;
  }

  .video-subheading {
    font-size: 1.125rem;
    color: #666666;
    margin: 0;
    line-height: 1.5;
  }

  /* Video Grid */
  .video-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0;
    column-gap: 0;
    row-gap: 0;
  }

  .video-card {
    position: relative;
    width: 100%;
    background: #ffffff;
    overflow: hidden;
  }

  .video-player {
    display: block;
    width: 100%;
    max-width: 360px;
    aspect-ratio: 9 / 16;
    object-fit: cover;
    border: none;
    margin: 0 auto;
  }

  /* Tablet: 4 columns */
  @media (min-width: 768px) {
    .video-grid {
      grid-template-columns: repeat(4, 1fr);
    }

    .video-heading {
      font-size: 2.5rem;
    }

    .video-subheading {
      font-size: 1.25rem;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .video-portfolio-section {
      padding: 5rem 0;
    }

    .video-header {
      margin-bottom: 4rem;
    }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .video-portfolio-section {
      padding: 3rem 0;
    }

    .video-heading {
      font-size: 1.75rem;
    }

    .video-subheading {
      font-size: 1rem;
    }
  }
</style>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animate video cards on scroll
  const videoCards = document.querySelectorAll('.video-card');

  gsap.from(videoCards, {
    scrollTrigger: {
      trigger: '.video-grid',
      start: 'top 80%',
      toggleActions: 'play none none none'
    },
    opacity: 0,
    y: 50,
    scale: 0.95,
    duration: 0.6,
    stagger: 0.1,
    ease: 'power2.out'
  });
</script>
