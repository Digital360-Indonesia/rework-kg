---
/**
 * Hero Section Component
 * Top section with 3 value props and banner image
 * Based on static clone: assets-source/kg-static-clone/kustomgarment.com/index.html (lines 162-263)
 */

const whatsappNumber = import.meta.env.PUBLIC_WHATSAPP_NUMBER || '6285161202499';
const whatsappMessage = import.meta.env.PUBLIC_WHATSAPP_MESSAGE || 'Saya%20dapat%20informasi%20No%20Minimum%20Order%20dari%20website.%20Mohon%20informasi%20lebih%20lengkap%20%26%20harga%20ya%2C%20ya.%20Terima%20kasih.';
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;

// Value props data
const valueProps = [
  {
    icon: 'shipping',
    title: 'Kualitas Premium',
    description: 'Jaminan garansi kualitas premium dalam setiap pemesanan'
  },
  {
    icon: 'tshirt',
    title: 'Bikin Baju Gercep',
    description: 'Dimanapun dan kapanpun nikmati kemudahan bikin baju secara mudah'
  },
  {
    icon: 'headphones',
    title: 'Customer Support',
    description: 'Team Customer Support kami akan siap membantu kebutuhan Anda'
  }
];
---

<!-- Value Props Section (Desktop Only) -->
<section class="hero-value-props" aria-label="Value Propositions">
  <div class="value-props-container">
    {valueProps.map((prop) => (
      <div class="value-prop-card">
        <div class="value-prop-icon">
          {prop.icon === 'shipping' && (
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" fill="currentColor" aria-hidden="true">
              <path d="M624 352h-16V243.9c0-12.7-5.1-24.9-14.1-33.9L494 110.1c-9-9-21.2-14.1-33.9-14.1H416V48c0-26.5-21.5-48-48-48H112C85.5 0 64 21.5 64 48v48H8c-4.4 0-8 3.6-8 8v16c0 4.4 3.6 8 8 8h272c4.4 0 8 3.6 8 8v16c0 4.4-3.6 8-8 8H40c-4.4 0-8 3.6-8 8v16c0 4.4 3.6 8 8 8h208c4.4 0 8 3.6 8 8v16c0 4.4-3.6 8-8 8H8c-4.4 0-8 3.6-8 8v16c0 4.4 3.6 8 8 8h208c4.4 0 8 3.6 8 8v16c0 4.4-3.6 8-8 8H64v128c0 53 43 96 96 96s96-43 96-96h128c0 53 43 96 96 96s96-43 96-96h48c8.8 0 16-7.2 16-16v-32c0-8.8-7.2-16-16-16zM160 464c-26.5 0-48-21.5-48-48s21.5-48 48-48 48 21.5 48 48-21.5 48-48 48zm320 0c-26.5 0-48-21.5-48-48s21.5-48 48-48 48 21.5 48 48-21.5 48-48 48zm80-208H416V144h44.1l99.9 99.9V256z"></path>
            </svg>
          )}
          {prop.icon === 'tshirt' && (
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" fill="currentColor" aria-hidden="true">
              <path d="M631.2 96.5L436.5 0C416.4 27.8 371.9 47.2 320 47.2S223.6 27.8 203.5 0L8.8 96.5c-7.9 4-11.1 13.6-7.2 21.5l57.2 114.5c4 7.9 13.6 11.1 21.5 7.2l56.6-27.7c10.6-5.2 23 2.5 23 14.4V480c0 17.7 14.3 32 32 32h256c17.7 0 32-14.3 32-32V226.3c0-11.8 12.4-19.6 23-14.4l56.6 27.7c7.9 4 17.5.8 21.5-7.2L638.3 118c4-7.9.8-17.6-7.1-21.5z"></path>
            </svg>
          )}
          {prop.icon === 'headphones' && (
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" aria-hidden="true">
              <path d="M256 32C114.52 32 0 146.496 0 288v48a32 32 0 0 0 17.689 28.622l14.383 7.191C34.083 431.903 83.421 480 144 480h24c13.255 0 24-10.745 24-24V280c0-13.255-10.745-24-24-24h-24c-31.342 0-59.671 12.879-80 33.627V288c0-105.869 86.131-192 192-192s192 86.131 192 192v1.627C427.671 268.879 399.342 256 368 256h-24c-13.255 0-24 10.745-24 24v176c0 13.255 10.745 24 24 24h24c60.579 0 109.917-48.098 111.928-108.187l14.382-7.191A32 32 0 0 0 512 336v-48c0-141.479-114.496-256-256-256z"></path>
            </svg>
          )}
        </div>
        <div class="value-prop-content">
          <h3 class="value-prop-title">{prop.title}</h3>
          <p class="value-prop-description">{prop.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>

<!-- Hero Banner Section -->
<section class="hero-banner" aria-label="Hero Banner">
  <a
    href={whatsappUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="hero-banner-link"
    aria-label="Hubungi Kami via WhatsApp"
  >
    <img
      src="/images/hero/no-min-order-banner.webp"
      alt="No Minimum Order - Desain Bebas, Tanpa Minimal Order"
      width="2000"
      height="766"
      loading="eager"
      decoding="async"
      class="hero-banner-image"
    />
  </a>
</section>

<style>
  /* Value Props Section */
  .hero-value-props {
    background: #ffffff;
    padding: 2rem 0;
  }

  .value-props-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .value-prop-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: #ffffff;
    border-radius: 8px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .value-prop-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .value-prop-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #0066cc;
  }

  .value-prop-icon svg {
    width: 100%;
    height: 100%;
  }

  .value-prop-content {
    flex: 1;
  }

  .value-prop-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #333333;
    margin: 0 0 0.25rem 0;
    line-height: 1.4;
  }

  .value-prop-description {
    font-size: 0.875rem;
    color: #666666;
    margin: 0;
    line-height: 1.5;
  }

  /* Hero Banner Section */
  .hero-banner {
    width: 100%;
    background: #ffffff;
  }

  .hero-banner-link {
    display: block;
    width: 100%;
    text-decoration: none;
  }

  .hero-banner-image {
    display: block;
    width: 100%;
    height: auto;
  }

  /* Hide value props on mobile */
  @media (max-width: 767px) {
    .hero-value-props {
      display: none;
    }
  }

  /* Tablet adjustments */
  @media (min-width: 768px) and (max-width: 1023px) {
    .value-props-container {
      gap: 1rem;
    }

    .value-prop-title {
      font-size: 1rem;
    }

    .value-prop-description {
      font-size: 0.8125rem;
    }

    .value-prop-icon {
      width: 40px;
      height: 40px;
    }
  }
</style>

<script>
  import gsap from 'gsap';

  // Animate value props on load
  const valuePropCards = document.querySelectorAll('.value-prop-card');

  // Set initial state
  gsap.set(valuePropCards, {
    opacity: 0,
    y: 30
  });

  // Animate in
  gsap.to(valuePropCards, {
    opacity: 1,
    y: 0,
    duration: 0.6,
    stagger: 0.15,
    ease: 'power2.out',
    delay: 0.2
  });
</script>
