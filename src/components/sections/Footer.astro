  { label: 'Tentang Kami', href: '/care/' },
  { label: 'Syarat Ketentuan', href: '/care/' },
  { label: 'Hubungi Kami', href: '/care/' },
  { label: 'Artikel', href: '/blog/' },
  { label: 'FAQ', href: '/care/' },
];

// Footer column 2 links
const productLinks = [
  { label: 'Cara Pemesanan', href: '/care/' },
  { label: 'Add On Product', href: '/produk/' },
  { label: 'Katalog Jersey', href: '/katalog-jersey-baseball/' },
  { label: 'Partnership', href: '/care/' },
  { label: 'Sizechart', href: '/sizechart/' },
  { label: 'Portfolio', href: 'https://portfolio.kustomgarment.com/' },
];

// Contact info
const contactInfo = {
  address: 'Jl. Sidosermo IV Gg. III No. 37 (Raya Prapen), Sidosermo, Surabaya',
  phone: '0851 6120 2499',
  email: 'marketing@kustomgarment.com',
};

// Social media links
const socialLinks = [
  {
    name: 'Facebook',
    href: 'https://www.facebook.com/kustompedia/',
    class: 'facebook',
  },
  {
    name: 'Twitter',
    href: 'https://x.com/kustompedia',
    class: 'twitter',
  },
  {
    name: 'Youtube',
    href: 'https://www.youtube.com/channel/UCWF7_jTvwOqI6a2YjwJ1nKg',
    class: 'youtube',
  },
  {
    name: 'Instagram',
    href: 'https://www.instagram.com/kustomgarment',
    class: 'instagram',
  },
  {
    name: 'Tiktok',
    href: 'https://www.tiktok.com/@kustomgarment_id',
    class: 'tiktok',
  },
];
---

<footer id="uicore-tb-footer" itemscope="itemscope" itemtype="https://schema.org/WPFooter">
  <div data-elementor-type="uicore-tb" data-elementor-id="40" class="elementor elementor-40">
    <!-- Section 1: Main Footer Content (3 Columns) -->
    <section
      class="elementor-section elementor-top-section elementor-element elementor-element-090c31c elementor-section-boxed elementor-section-height-default elementor-section-height-default"
      data-id="090c31c"
      data-element_type="section"
      data-settings='{"background_background":"classic"}'
    >
      <div class="elementor-background-overlay"></div>
      <div class="elementor-container elementor-column-gap-default">
        <!-- Column 1: Visit Us Now -->
        <div
          class="elementor-column elementor-col-33 elementor-top-column elementor-element elementor-element-d4a29a8"
          data-id="d4a29a8"
          data-element_type="column"
        >
          <div class="elementor-widget-wrap elementor-element-populated">
            <div
              class="elementor-element elementor-element-44cc540 elementor-widget-tablet__width-inherit elementor-widget elementor-widget-heading"
              data-id="44cc540"
              data-element_type="widget"
              data-widget_type="heading.default"
            >
              <div class="elementor-widget-container">
                <h2 class="elementor-heading-title elementor-size-default">
                  Visit Us Now
                </h2>
              </div>
            </div>
            <div
              class="elementor-element elementor-element-f9b8faa elementor-widget elementor-widget-text-editor"
              data-id="f9b8faa"
              data-element_type="widget"
              data-widget_type="text-editor.default"
            >
              <div class="elementor-widget-container">
                <p>
                  Konsultasi & dapatkan inspirasi produk sekarang di Marketing
                  Gallery
                </p>
              </div>
            </div>
            <div
              class="elementor-element elementor-element-18dbafb elementor-widget elementor-widget-google_maps"
              data-id="18dbafb"
              data-element_type="widget"
              data-widget_type="google_maps.default"
            >
              <div class="elementor-widget-container">
                <div class="elementor-custom-embed">
                  <iframe
                    loading="lazy"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3957.686062739954!2d112.7326!3d-7.3195!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2dd7fb9f00000001%3A0x0!2sKustom%20Garment!5e0!3m2!1sen!2sid!4v1234567890"
                    title="Kustom Garment"
                    aria-label="Kustom Garment"
                  ></iframe>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Column 2: Company Links -->
        <div
          class="elementor-column elementor-col-33 elementor-top-column elementor-element elementor-element-9619b61"
          data-id="9619b61"
          data-element_type="column"
        >
          <div class="elementor-widget-wrap elementor-element-populated">
            <div
              class="elementor-element elementor-element-57c0250 elementor-align-left elementor-icon-list--layout-traditional elementor-list-item-link-full_width elementor-widget elementor-widget-icon-list"
              data-id="57c0250"
              data-element_type="widget"
              data-widget_type="icon-list.default"
            >
              <div class="elementor-widget-container">
                <ul class="elementor-icon-list-items">
                  {companyLinks.map((link) => (
                    <li class="elementor-icon-list-item">
                      <a href={link.href}>
                        <span class="elementor-icon-list-text"
                          >{link.label}</span
                        >
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Column 3: Product Links -->
        <div
          class="elementor-column elementor-col-33 elementor-top-column elementor-element elementor-element-791a92b"
          data-id="791a92b"
          data-element_type="column"
        >
          <div class="elementor-widget-wrap elementor-element-populated">
            <div
              class="elementor-element elementor-element-8e9f8d5 elementor-align-left elementor-icon-list--layout-traditional elementor-list-item-link-full_width elementor-widget elementor-widget-icon-list"
              data-id="8e9f8d5"
              data-element_type="widget"
              data-widget_type="icon-list.default"
            >
              <div class="elementor-widget-container">
                <ul class="elementor-icon-list-items">
                  {productLinks.map((link) => (
                    <li class="elementor-icon-list-item">
                      <a
                        href={link.href}
                        target={link.href.startsWith('http') ? '_blank' : undefined}
                        rel={
                          link.href.startsWith('http')
                            ? 'noopener noreferrer'
                            : undefined
                        }
                      >
                        <span class="elementor-icon-list-text"
                          >{link.label}</span
                        >
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Section 2: Contact Info + Logo + Social Icons -->
    <section
      class="elementor-section elementor-top-section elementor-element elementor-element-d8b89f6 elementor-section-content-middle elementor-section-boxed elementor-section-height-default elementor-section-height-default"
      data-id="d8b89f6"
      data-element_type="section"
      data-settings='{"background_background":"classic"}'
    >
      <div class="elementor-container elementor-column-gap-default">
        <!-- Left Column: Contact Info -->
        <div
          class="elementor-column elementor-col-50 elementor-top-column elementor-element elementor-element-74e3d95"
          data-id="74e3d95"
          data-element_type="column"
        >
          <div class="elementor-widget-wrap elementor-element-populated">
            <div
              class="elementor-element elementor-element-1bb83a6 elementor-widget elementor-widget-text-editor"
              data-id="1bb83a6"
              data-element_type="widget"
              data-widget_type="text-editor.default"
            >
              <div class="elementor-widget-container">
                <p>{contactInfo.address}</p>
                <p>{contactInfo.phone}</p>
                <p>
                  <a href={`mailto:${contactInfo.email}`}>{contactInfo.email}</a>
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column: Logo + Social Icons -->
        <div
          class="elementor-column elementor-col-50 elementor-top-column elementor-element elementor-element-cd07f99"
          data-id="cd07f99"
          data-element_type="column"
        >
          <div class="elementor-widget-wrap elementor-element-populated">
            <!-- Logo -->
            <div
              class="elementor-element elementor-element-5401845 elementor-widget elementor-widget-image"
              data-id="5401845"
              data-element_type="widget"
              data-widget_type="image.default"
            >
              <div class="elementor-widget-container">
                <img
                  src="/images/logos/kg-logo.png"
                  title="kg-logo"
                  alt="kg-logo"
                  loading="lazy"
                />
              </div>
            </div>

            <!-- Social Icons -->
            <div
              class="elementor-element elementor-element-3f2938b elementor-shape-circle e-grid-align-right e-grid-align-mobile-left elementor-grid-0 elementor-widget elementor-widget-social-icons"
              data-id="3f2938b"
              data-element_type="widget"
              data-widget_type="social-icons.default"
            >
              <div class="elementor-widget-container">
                <div class="elementor-social-icons-wrapper elementor-grid">
                  {socialLinks.map((social) => (
                    <span class="elementor-grid-item">
                      <a
                        class={`elementor-icon elementor-social-icon elementor-social-icon-${social.class}`}
                        href={social.href}
                        target="_blank"
                      >
                        <span class="elementor-screen-only">{social.name}</span>
                        <svg
                          class="e-font-icon-svg e-fab-{social.class}"
                          viewBox="0 0 512 512"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <use
                            href={`/images/social-icons.svg#${social.class}`}
                          />
                        </svg>
                      </a>
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Section 3: Copyright -->
    <section
      class="elementor-section elementor-top-section elementor-element elementor-element-70d28cb elementor-section-boxed elementor-section-height-default elementor-section-height-default"
      data-id="70d28cb"
      data-element_type="section"
      data-settings='{"background_background":"classic"}'
    >
      <div class="elementor-container elementor-column-gap-default">
        <div
          class="elementor-column elementor-col-50 elementor-top-column elementor-element elementor-element-dd18cb3"
          data-id="dd18cb3"
          data-element_type="column"
        >
          <div class="elementor-widget-wrap elementor-element-populated">
            <div
              class="elementor-element elementor-element-2c2adb0 elementor-widget elementor-widget-text-editor"
              data-id="2c2adb0"
              data-element_type="widget"
              data-widget_type="text-editor.default"
            >
              <div class="elementor-widget-container">
                <p>
                  Â© {currentYear} Kustompedia. All Rights Reserved. Made with
                  Passion by <a href="https://digital360.id">Digital360</a>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div
          class="elementor-column elementor-col-50 elementor-top-column elementor-element elementor-element-3420fd8"
          data-id="3420fd8"
          data-element_type="column"
        >
          <div class="elementor-widget-wrap"></div>
        </div>
      </div>
    </section>
  </div>
</footer>

<style>
  /* Elementor footer base styles */
  #uicore-tb-footer {
    background: #1a1a1a;
    color: #ffffff;
  }

  /* Elementor section styles */
  .elementor-section {
    position: relative;
  }

  .elementor-container {
    max-width: 1140px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .elementor-column-gap-default > .elementor-column > .elementor-element-populated {
    padding: 10px;
  }

  @media (min-width: 768px) {
    .elementor-column-gap-default
      > .elementor-column
      > .elementor-element-populated {
      padding: 20px;
    }
  }

  .elementor-section-boxed .elementor-container {
    max-width: 1140px;
  }

  /* Column widths */
  .elementor-col-100 {
    width: 100%;
  }
  .elementor-col-50 {
    width: 50%;
  }
  .elementor-col-33 {
    width: 33.333%;
  }

  @media (max-width: 767px) {
    .elementor-col-50,
    .elementor-col-33 {
      width: 100%;
    }
  }

  .elementor-top-section .elementor-element {
    width: 100%;
  }

  /* Grid layout for columns */
  .elementor-section .elementor-container {
    display: flex;
  }

  @media (max-width: 767px) {
    .elementor-section .elementor-container {
      flex-wrap: wrap;
    }
  }

  /* Footer section padding */
  #uicore-tb-footer .elementor-section {
    padding: 50px 0;
  }

  /* Background overlay */
  .elementor-background-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  /* Heading styles */
  .elementor-heading-title {
    color: #ffffff;
    font-size: 24px;
    font-weight: 600;
    margin: 0 0 10px 0;
  }

  .elementor-size-default {
    font-size: 16px;
  }

  /* Text editor styles */
  .elementor-widget-text-editor p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 14px;
    line-height: 1.6;
    margin: 0 0 10px 0;
  }

  #uicore-tb-footer .elementor-widget-text-editor a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
  }

  #uicore-tb-footer .elementor-widget-text-editor a:hover {
    color: #ffffff;
  }

  /* Icon list styles */
  .elementor-icon-list-items {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .elementor-icon-list-item {
    margin: 0 0 12px 0;
    padding: 0;
  }

  .elementor-icon-list-item a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 14px;
    transition: color 0.3s;
  }

  .elementor-icon-list-item a:hover {
    color: #ffffff;
  }

  /* Google Maps iframe */
  .elementor-custom-embed iframe {
    width: 100%;
    height: 200px;
    border: none;
    border-radius: 8px;
  }

  /* Image widget */
  .elementor-widget-image img {
    max-width: 120px;
    height: auto;
    display: block;
    margin: 0 auto 20px auto;
  }

  @media (min-width: 768px) {
    .elementor-widget-image img {
      margin: 0 0 20px 0;
    }
  }

  /* Social icons */
  .elementor-social-icons-wrapper {
    display: flex;
    gap: 10px;
  }

  @media (min-width: 768px) {
    .elementor-social-icons-wrapper.e-grid-align-right {
      justify-content: flex-end;
    }
  }

  .elementor-social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: rgba(255, 255, 255, 0.8);
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    text-decoration: none;
    transition: background 0.3s, color 0.3s;
  }

  .elementor-social-icon:hover {
    background: rgba(255, 255, 255, 0.2);
    color: #ffffff;
  }

  .elementor-social-icon svg {
    width: 16px;
    height: 16px;
    fill: currentColor;
  }

  .elementor-screen-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }

  /* Footer copyright section */
  #uicore-tb-footer .elementor-element-70d28cb {
    padding: 20px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  #uicore-tb-footer
    .elementor-element-70d28cb
    .elementor-widget-text-editor
    p {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }

  #uicore-tb-footer
    .elementor-element-70d28cb
    .elementor-widget-text-editor
    a {
    color: rgba(255, 255, 255, 0.8);
  }

  /* Responsive adjustments */
  @media (min-width: 768px) {
    .elementor-section-content-middle .elementor-container {
      align-items: center;
    }
  }

  @media (min-width: 1024px) {
    .elementor-container {
      max-width: 1140px;
    }
  }
</style>
